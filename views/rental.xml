<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>

		<record model="ir.ui.view" id="immo_view_rental_tree">
			<field name="name">immo.view.rental_tree</field>
			<field name="model">immo.rental</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="rent">
					<field name="date_start" />
					<field name="date_end" />
					<field name="building_id" string="Building" />
				</tree>
			</field>
		</record>
		<record model="ir.ui.view" id="rental_form_view">
			<field name="name">rental.form</field>
			<field name="model">immo.rental</field>

			<field name="arch" type="xml">
				<form string="rental Form">
					<group col="4">
					<field name="contract_date" />
						<field name="date_start" />
						<field name="date_end" />
						<field name="note" />
						<field name="rent" />
						<field name="indice_sante_initial" />
						
						<field name="charges" />
<!-- 						<field name="insurancecompany_id" /> -->
<!-- 						<field name="guarantor_id" /> -->
						
					</group>
					<sheet>
						<notebook>
							<page string="Building" name="Building">

								<field name="building_id">
									<tree>
										<field name="street" />
										<field name="city" />
									</tree>
								</field>

							</page>
							<page string="Revisions">
								<group col="1">
									<field name="revision_ids">
										<tree>
											<field name="rent" />
										</tree>
									</field>
								</group>
							</page>
							<page string="Tenants">
								<group col="1">
									<field name="tenant_ids">
										<tree>
											<field name="name" />
										</tree>
									</field>
								</group>
							</page>
							<page string="Divers" >
<group col="4">
								<field name="guarantor_ids" string="Guarantors"/>
</group>
							</page>
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
	</data>
</openerp>